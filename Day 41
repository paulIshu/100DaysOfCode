public: 
    Node *prev = NULL;
    Node* head = NULL;
    //Function to convert binary tree to doubly linked list and return it.
    Node * bToDLL(Node *root)
    {
        // your code here
        if(root == NULL) return root;
        bToDLL(root->left);
        if(prev == NULL)
            head = root;
        else
            prev->right = root;
        root->left = prev;
        prev = root;
        bToDLL(root->right);
        return head;
    }
